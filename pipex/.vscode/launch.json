{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/pipex",
      "args": ["a", "ls -l", "wc -l", "d"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Enable multi-process debugging",
          "text": "set detach-on-fork off",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    }
  ]
}
